    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/perfil"
        android:scaleType="centerCrop"
        android:contentDescription="imagen perfil" />

